@model System.Collections.Generic.IEnumerable<Destiny.ScrimTracker.Logic.Models.MatchMadeTeam>

<!DOCTYPE html>

@{
    var count = 0;
}
<html>
<head>
    <title>Matchmaking</title>
</head>
<body>
@foreach (var team in Model)
{
    count++;
    
    <div class="container d-flex table-responsive match">
        <table class="table table-condensed">
            <thead>
            <tr>
                <th scope="col">Guardian</th>
                <th scope="col">Efficiency</th>
                <th scope="col">Elo</th>
            </tr>
            </thead>
                <h4 class="sub-header">Team @count</h4>
                @foreach (var guardian in team.Guardians)
                {
                    <tr>
                        <td style ="word-break:break-all;">@guardian.Guardian.GamerTag</td>
                        <td style ="word-break:break-all;">@guardian.GuardianEfficiency.ToString("F2")</td>
                        <td style ="word-break:break-all;">@guardian.GuardianElo.ToString("F2")</td>
                    </tr>
                }
            <tr>
                <th colspan="3">Team ELO: @team.TeamElo.ToString("F2")</th>
            </tr>
        </table>
    </div>
}
</body>
</html>